<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activity.EmptyRecipeCatalog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-107dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="157dp"
            android:layout_height="144dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="29dp"
            android:paddingLeft="-70dp"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="210dp"
        android:paddingTop="35dp"
        tools:layout_editor_absoluteX="-107dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/my_profile_button"
            android:layout_width="160dp"
            android:layout_height="63dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="29dp"
            android:text="Mоя профил"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="110dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-29dp">

        <TextView
            android:id="@+id/singIn_title"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="100dp"
            android:text="Все още нямате добавени рецепти\n\nДобавете сега"
            android:textSize="40dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="75dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="500dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-29dp">

        <Button
            android:id="@+id/button"
            android:layout_width="168dp"
            android:layout_height="60dp"
            android:paddingTop="10dp"
            android:text="Добавете рецепта"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="121dp"
            tools:layout_editor_absoluteY="950dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>