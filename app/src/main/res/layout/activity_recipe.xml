<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Recipe"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="210dp"
        android:paddingTop="35dp"
        tools:layout_editor_absoluteX="-107dp"
        tools:layout_editor_absoluteY="0dp">

    <Button
        android:id="@+id/button"
        android:layout_width="160dp"
        android:layout_height="63dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="29dp"
        android:text="Mоя профил"
        android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-107dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="157dp"
            android:layout_height="144dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="29dp"
            android:paddingLeft="-70dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/register_title"
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:paddingLeft="40dp"
            android:text="Добави рецепта"
            android:textSize="40dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="95dp" />

        <EditText
            android:id="@+id/recipe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Заглавие на рецептата"
            android:imeOptions="actionNext"
            android:padding="16dp"
            android:singleLine="true"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/recipe_servings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Порции"
            android:imeOptions="actionNext"
            android:padding="16dp"
            android:singleLine="true"
            android:textSize="17dp" />


        <EditText
            android:id="@+id/recipe_ingredients_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Съставки"
            android:imeOptions="actionNext"
            android:padding="16dp"
            android:singleLine="true"
            android:textSize="17dp" />


        <EditText
            android:id="@+id/recipe_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Начин на приготвяне на рецептата"
            android:imeOptions="actionDone"
            android:padding="16dp"
            android:singleLine="true"
            android:textSize="17dp" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Запази рецептата"
            android:textSize="19dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>